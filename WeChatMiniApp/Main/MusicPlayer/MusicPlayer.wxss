page {
  margin: 0;
  padding: 0;

}
.background {
  width: 100%;
  height: 100vh;
  background-size: cover;
  background-repeat: no-repeat;
  z-index: -1;
  position: fixed;
}


#PalyerPage{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.Musicimage {
  width: 500rpx;
  height: 500rpx;
  margin-top: 100rpx;
}

#MusicAlbumimg {
  width: 100%;
  height: 100%;
  box-shadow: 5px 5px 2px #2c3e50;
  /* border-radius: 50%; */
}


.MusicName {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
  width: 100%;
  height: 100%;
  font-size: 40rpx;
}
#SingerName{
  margin-top: 0.5vh;
}

#MusicProcess {
  display: flex;
  flex-direction:row;
  align-items: center;
}

#MusicProcess slider {
  width: 500rpx;
}

#DownArea{
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: space-around;
}
#CollectIcon{
  margin-top: 1.5vh;
}

#PlayerBtnArea{
  display: flex;
  flex-direction: row;
  margin-top: 1.5vh;
}

.PlayerButtonimg {
  width: 100rpx;
  height: 100rpx;

}
.PlayerButtonimg{
  border-left: 2.5vw solid transparent;
  border-right: 2.5vw solid transparent;
}
