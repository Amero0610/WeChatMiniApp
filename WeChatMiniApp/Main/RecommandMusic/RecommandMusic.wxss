#Maintitle{
    display: block;
    font-weight: bold;
    font-size: 70rpx;
    text-align: center;
    margin-top: 20rpx;
    font-family: "Nyashi_Friends";
}
.Recommand-area{
    /* background-color: lightblue; */
    display: flex;
    justify-content: space-around;
    align-content: space-around;
    flex-wrap: wrap;
    justify-items: center;
}
/* 选择所有父级是 Recommand 元素的 <view> 元素 */
.Recommand-area>view{
    display: flex;
    width: 49%;
    height: 300rpx;
    /* background-color: lightcyan;
    border: 1rpx solid black; */
    flex-direction: column;


}
.Recommand_title{
    display: inline-block;
    width: 100%;
    text-overflow: ellipsis; 
    overflow: hidden; 
    white-space: nowrap; 
    text-align: center;
    margin-top: 20rpx;
    font-size: 35rpx;
}

.RecommandImage{
    margin-top: 10rpx;
    flex: none;
    align-self: center;
    width: 200rpx;
    height: 200rpx;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    
}
#Recommand_Classic{
    width: 100%;
}





#Recommand-listTitle{
    font-size: 50rpx;
    text-align: center;
}
.Recommand-list{
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;

}
.NewMusicTitle{
    display: block;
    text-align: center;
}
.NewMusic-1,.NewMusic-2{
    width: 40%;
}



.Recommand-list ul{
    display: flex;
    flex-flow: column;
    align-content: center;

}
.Recommand-list ul li{
    display: flex;
    flex-flow: row;
    align-items: center;
    justify-content: center;
    margin-top: 20rpx;
}
.ListPlayBtn,.NewMusicPlay-icon{
    width: 35rpx;
    height: 35rpx;
}


.MusicListArea ul li view {
    width: 80%;
    display: flex;
    flex-flow: column;
}

.MusicName,.MusicAuthor {
    margin-left: 20rpx;
    display: block;
    width: 100%;
    text-overflow: ellipsis; 
    overflow: hidden; 
    white-space: nowrap; 
    text-align: left;
}
.MusicName{
    font-size: 40rpx;
}
.MusicAuthor{
    font-size: 30rpx;
    color: #ffffffdc;
} 
